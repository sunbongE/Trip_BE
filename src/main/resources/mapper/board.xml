<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.board.model.mapper.BoardMapper">

	<resultMap type="boardDto" id="article">
		<result column="article_no" property="articleNo"/>
		<result column="user_id" property="userId"/>
		<result column="subject" property="subject"/>
		<result column="content" property="content"/>
		<result column="hit" property="hit"/>
		<result column="register_time" property="registerTime"/>
		<result column="recomment" property="recomment"/>
		<result column="category" property="category"/>
		<result column="content_id" property="contentId"/>
	</resultMap>

	<insert id="registerArticle" parameterType="boardDto">
	insert into board(user_id, subject, content, register_time,category,contentId)
	values(#{userId},#{subject}, #{content},now(),#{category},#{contentId})
	</insert>
	
	<select id="searchListAll" parameterType="map" resultMap="article">
	select article_no,user_id,subject,content, hit, register_time ,category , contentId
	from board order by hit desc, register_time desc
	</select>
	
	<select id="searchListBySubject" parameterType="map" resultMap="article">
	select article_no,user_id,subject,content, hit, register_time ,category , contentId
from board 
where subject like concat('%',#{subject},'%')
order by hit desc, register_time desc
	
	</select>
	
	<select id="viewArticle" parameterType="int" resultMap="article">
		select article_no,user_id,subject,content, hit, register_time ,category , contentId
		from board 
		where article_no = #{articleNo}
	</select>
	

	
	<update id="updateHit" parameterType="int">
		update board
		set hit = hit + 1
		where article_no = #{articleNo}
	</update>
	<update id="updateRecomment" parameterType="int">
		update board
		set recomment = recomment + 1
		where article_no = #{articleNo}
	</update>
	
	<update id="modifyArticle" parameterType="boardDto">
	update board set subject=#{subject}, content=#{content}
	where article_no = #{articleNo}
	</update>

	
	<delete id="deleteArticle" parameterType="int">
		delete from board
		where article_no = #{articleNo}
	</delete>
